@model IEnumerable<MusStore.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Таблица товаров</h2>
<div class="container">
    <p>
        @Html.ActionLink("Добавить альбом", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
               Исполнитель
            </th>
            <th>
                Жанр
            </th>
            <th>
                Название альбома
            </th>
            <th>
                Цена, руб
            </th>
            <th>
                Веб-сайт исполнителя
            </th>
            <th>
                Количество в наличии
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.AlbumId }) |
                    @Html.ActionLink("Подробности", "Details", new { id = item.AlbumId }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.AlbumId })
                </td>
            </tr>
        }

    </table>
    <p>@Html.ActionLink("Перейти к таблице жанров", "Index", "Genres")</p>
    <p>@Html.ActionLink("Перейти к таблице треков", "Index", "Tracks")</p>
    <p>@Html.ActionLink("Перейти к таблице исполнителей", "Index", "Artists")</p>
</div>
